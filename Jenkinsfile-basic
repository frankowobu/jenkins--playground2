#!/usr/bin/env groovy

pipeline {
    agent none
    parameter{
      choice(name:'VERSION', choices:  ['1.0', '1.1', '1.2'], description: 'choose the verion for deployment')
      
    }
    stages {
        stage('build') {
            steps {
                script {
                    echo "Building the application with version ${param.VERSION}..."
                }
            }
        }
        stage('test') {
            steps {
                script {
                    echo "Testing the application..."
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    echo "Deploying the application..."
                }
            }
        }
    }
}
