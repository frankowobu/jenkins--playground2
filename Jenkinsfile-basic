#!/usr/bin/env groovy

pipeline {
    agent none
     parameters {
        choice(name: 'OLDER_VERSION', choices: ['1.0', '1.1', '1.2'], description: 'Choose the version for deployment')
        choice(name: 'NEWER_VERSION', choices: ['1.0', '1.1', '1.2'], description: 'Choose the version for deployment')
    }
    stages {
        stage('build') {
            steps {
                script {
                    echo "upgrading the application from version ${params.OLDER-VERSION} to version ${params.NEWER-VERSION}..."
                }
            }
        }
        stage('test') {
            steps {
                script {
                    echo "Testing the application..."
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    echo "Deploying the application..."
                }
            }
        }
    }
}
