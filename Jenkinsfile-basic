#!/usr/bin/env groovy

pipeline {
    agent none
     parameters {
        choice(name: 'VERSION', choices: ['1.0', '1.1', '1.2'], description: 'Choose the version for deployment')
    }
    stages {
        stage('build') {
            steps {
                script {
                    echo "Building the application with version ${params.VERSION}..."
                }
            }
        }
        stage('test') {
            steps {
                script {
                    echo "Testing the application..."
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    echo "Deploying the application..."
                }
            }
        }
    }
}
