#!/usr/bin/env groovy

pipeline {
    agent any
    tools{
        maven 'maven-3.9.3'
    }
    stages {
        stage('build jar') {
            steps {
                script {
                    echo "Building the application..."
                    sh "mvn package"
                }
            }
        }
        stage('build image') {
            steps {
                script {
                    echo "Building the application image..."
                     withCredentials([
                        usernamePassword(credentialsId: 'my-docker-credentials', userVariable: 'USER', passwordVariable: 'PASS')
                    ]){
                        sh 'docker build -t faizegbhene/jenkins-maven-repo:1.0 . '
                        sh "echo $PASS | docker login -u $USER --password-stdin"
                        sh 'docker push faizegbhene/jenkins-maven-repo:1.0'
                    }
                }
            }
        }
        stage('test') {
            steps {
                script {
                    echo "Testing the application..."
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    echo "Deploying the application..."
                }
            }
        }
    }
}
