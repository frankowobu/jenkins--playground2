#!/usr/bin/env groovy

pipeline {
    agent any
    tools {
        maven 'maven'
    }
    stages {
        stage('image versioning') {
            steps {
                script {
                    echo "versioning the image"
                    sh 'mvn build-helper:parse-version versions:Set \
                        -DnewVersion=\\\${parsed.majorVersion}.\\\${parsed.minorVersion}.\\\${parsed.newIncrementVersion} \
                        versions:commit'
                    def matcher = readFile('pom.xml') =~ '<version>(.+)</version>'
                    def version = matcher[0][1]
                    env.IMAGE_NAME = "$version-$BUILD_NUMBER"
                }
            }
        }
        stage('build jar') {
            steps {
                script {
                    echo "Building the application..."
                    sh "mvn clean package"

                }
            }
        }
        stage('build image') {
            steps {
                script {
                    echo "Building the application image..."
                    withCredentials([
                        usernamePassword(credntialsId:,usernameVariable:'PASS',passwordVariable:'PWD')
                    ]){
                        sh "docker build -t faizegbhene/jenkins-maven-repo:$IMAGE_NAME ."
                        sh "echo $PWD | docker login -u $PASS --password-stdin"
                        sh "docker push faizegbhene/jenkins-maven-repo:$IMAGE_NAME"
                    }
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    echo "Deploying the application..."
                }
            }
        }
    }
}
